                    <View
                        android:id="@+id/line1"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginStart="22dp"
                        android:layout_marginTop="23dp"
                        android:layout_marginEnd="22dp"
                        android:layout_marginBottom="28dp"
                        android:background="@color/linecolor"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/linearLayout4" />

                    <LinearLayout
                        android:id="@+id/linearLayout4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:layout_marginEnd="22dp"
                        android:layout_marginBottom="52dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/applychanges"
                        >

                        <TextView
                            android:id="@+id/reguler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="11dp"
                            android:layout_weight="1"
                            android:background="@drawable/backgroud_black_radius_r_notchecked"
                            android:gravity="center"
                            android:paddingStart="27dp"
                            android:paddingTop="14dp"
                            android:paddingEnd="27dp"
                            android:paddingBottom="14dp"
                            android:text="Regular" />

                        <TextView
                            android:id="@+id/large"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="11dp"
                            android:layout_weight="1"
                            android:background="@drawable/backgroud_black_radius_r_notchecked"
                            android:gravity="center"
                            android:paddingStart="27dp"
                            android:paddingTop="14dp"
                            android:paddingEnd="27dp"
                            android:paddingBottom="14dp"
                            android:text="Large" />

                        <TextView
                            android:id="@+id/extralarge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/backgroud_black_radius_r_notchecked"
                            android:gravity="center"
                            android:paddingStart="12dp"
                            android:paddingTop="14dp"
                            android:paddingEnd="11dp"
                            android:paddingBottom="14dp"
                            android:text="Extra Large" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/applychanges"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="32dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/background_black_round_corner_4dp"
                        android:fontFamily="@font/dm_sans_bold"
                        android:gravity="center"
                        android:lineSpacingExtra="-3sp"
                        android:paddingStart="100dp"
                        android:paddingTop="14dp"
                        android:paddingEnd="100dp"
                        android:paddingBottom="14dp"
                        android:text="Apply Changes"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
