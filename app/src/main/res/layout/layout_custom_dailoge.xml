<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroud_common_dialoge">

        <LinearLayout
            android:id="@+id/lltitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="31dp"
            android:layout_marginStart="15dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_sans_bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="@string/export_data_title" />
        </LinearLayout>

        <TextView
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="17dp"
            android:fontFamily="@font/dm_sans_medium"
            android:layout_marginStart="18dp"
            android:textColor="@color/dai_body_color"
            android:textSize="14sp"
            android:lineSpacingExtra="2sp"
            android:text="@string/export_data_body"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lltitle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/body"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="15dp">

            <TextView
                android:id="@+id/no_button"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_marginEnd="4dp"
                android:paddingTop="8dp"
                android:paddingEnd="54dp"
                android:paddingStart="54dp"
                android:paddingBottom="8dp"
                android:gravity="center"
                android:textSize="14sp"
                android:text="Return"
                android:textColor="@color/black"
                android:fontFamily="@font/dm_sans_medium"
                android:layout_height="wrap_content"
                android:background="@drawable/backgroud_black_radius_r_checked" />

            <TextView
                android:id="@+id/yes_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="8dp"
                android:paddingStart="48dp"
                android:paddingEnd="48dp"
                android:paddingTop="8dp"
                android:gravity="center"
                android:text="Confirm"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="@font/dm_sans_medium"
                android:background="@drawable/backgroud_black_radius_r_checked"
                android:backgroundTint="@color/black" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>