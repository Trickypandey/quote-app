<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QuoteAPP" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:textAppearance">@style/AppTextSize</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/oranegshade</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:fontFamily">@font/dm_sans</item>

        <!-- Customize your theme here. -->
    </style>
    <style name="AppTextSize" parent="android:TextAppearance">
        <item name="android:textSize">20sp</item> <!-- Set your desired text size -->
    </style>

    <style name="BottomNavigation.Active" parent="@android:style/TextAppearance">
        <item name="android:textSize">10sp</item> <!-- Adjust the text size as needed -->
    </style>

    <style name="BottomNavigation.Inactive" parent="@android:style/TextAppearance">
        <item name="android:textSize">10sp</item> <!-- Adjust the text size as needed -->
    </style>

    <style name="homepagestyle">
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="a_people_s_">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="john_h_clar">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="personal_pe">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#E9CA97</item>
    </style>

    <style name="a_woman_giv">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Theme.QuoteAPP.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.QuoteAPP.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.QuoteAPP.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>